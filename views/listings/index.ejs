<% layout("/layouts/boilerplate.ejs") %>

<style>
    .filter i {
        opacity: 0.8;
        font-size: 1.2rem;
        transition: 0.2s;
    }

    .filter:hover i {
        opacity: 1;
    }

    .filter a{
        text-decoration: none;
        color: black;
    }

    .toggle-switch {
        border: 1px solid black;
        border-radius: 2rem;
        display: flex;
        align-items: center;
        padding: 0.6rem 1rem;
    }

    .filter-collapse-toggle:hover{
        background-color: #fe424d !important;
        color: white !important;
    }
</style>

<div class="filter-section-wrapper my-3">
    <!-- Filter toggle button for medium/small screens -->
    <button class="btn btn-outline-secondary filter-collapse-toggle d-lg-none mb-2" type="button"
        data-bs-toggle="collapse" data-bs-target="#filterCollapse" aria-expanded="false"
        aria-controls="filterCollapse">
        <i class="fa-solid fa-sliders"></i> Filters
    </button>

    <!-- Filters container -->
    <div id="filterCollapse" class="collapse d-lg-block">
        <div class="row text-center g-1 w-100 mt-1">
            <div class="col-4 col-md-3 col-lg-3 filter">
                <a href="/listings/trending">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
                </a>
            </div>
            <div class="col-4 col-md-3 col-lg-3 filter">
                <a href="/listings/cities">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic cities</p>
                </a>
            </div>
            <div class="col-4 col-md-3 col-lg-3 filter">
                <a href="/listings/castle">
                <div><i class="fa-solid fa-chess-rook"></i></div>
                <p>Castles</p>
                </a>
            </div>
            <div class="col-4 col-md-3 col-lg-3 filter">
                <a href="/listings/camps">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
                </a>
            </div>
            <div class="col-4 col-md-3 col-lg-3 filter">
                <a href="/listings/farms">
                <div><i class="fa-solid fa-tractor"></i></div>
                <p>Farms</p>
                </a>
            </div>
            <div class="col-4 col-md-3 col-lg-3 filter">
                <a href="/listings/mountains">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountains</p>
                </a>
            </div>
            <div class="col-4 col-md-3 col-lg-3 filter">
                <a href="/listings/arctic">
                <div><i class="fa-solid fa-snowflake"></i></div>
                <p>Arctic</p>
                </a>
            </div>
            <div class="col-12 d-flex justify-content-center mt-3">
                <div class="toggle-switch ">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="switchCheckReverse">
                        <label class="form-check-label" for="switchCheckReverse">Display total after taxes</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings){ %>
        <a href="/listings/<%= listing._id%>" class="listing-card">
            <div class="card col listing-card">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text"><b><%= listing.title %></b><br>
                        &#8377;<%= listing.price.toLocaleString("en-IN") %> /night
                        <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
                    </p>
                </div>
            </div>
        </a>
    <% } %>
</div>

<script>
    let taxSwitch = document.getElementById("switchCheckReverse");
    let tax_info = document.getElementsByClassName("tax-info");
    taxSwitch.addEventListener("change", () => {
        for (let info of tax_info) {
            info.style.display = taxSwitch.checked ? "inline" : "none";
        }
    });
</script>
