<% layout("/layouts/boilerplate.ejs") %>
<div class="container mt-4">
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      <% castles.forEach(castle => { %>
        <a href="/listings/<%= castle._id %>" class="listing-card">
          <div class="card col listing-card">
            <img src="<%= castle.image.url %>" class="card-img-top" alt="listing image" style="height: 20rem;">
            <div class="card-body">
              <p class="card-text">
                <b><%= castle.title %></b><br>
                <%= castle.location %><br>
                â‚¹<%= castle.price.toLocaleString("en-IN") %> /night
              </p>
            </div>
          </div>
        </a>
      <% }); %>
    </div>
</div>