<% layout("/layouts/boilerplate.ejs") %>
<div class="container mt-4">
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      <% trendingListings.forEach(trendingListing => { %>
        <a href="/listings/<%= trendingListing._id %>" class="listing-card">
          <div class="card col listing-card">
            <img src="<%= trendingListing.image.url %>" class="card-img-top" alt="listing image" style="height: 20rem;">
            <div class="card-body">
              <p class="card-text">
                <b><%= trendingListing.title %></b><br>
                <%= trendingListing.location %><br>
                â‚¹<%= trendingListing.price.toLocaleString("en-IN") %> /night
              </p>
            </div>
          </div>
        </a>
      <% }); %>
    </div>
</div>